// Custom styles.

// body 区域背景颜色设置
body{
    background: #E0FCCF;
}

// 侧边栏星空背景设置
.sidebar {
    background: url(/images/sildeBarBg.jpg) no-repeat !important;
    background-size: cover !important;
    position: fixed !important;
    right: 0 !important;
    top: 0 !important;
    bottom: 0 !important;
}

// 页面留白设置
.header-inner {
    padding-top: 0px;
    padding-bottom: 0px;
}
.posts-expand {
    padding-top: 10px;
}
.posts-expand .post-meta {
    margin: 5px 0px 0px 0px;
}
.post-button {
    margin-top: 0px;
}
